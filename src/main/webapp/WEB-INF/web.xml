<web-app>



    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>com.ivanmix.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CountController</servlet-name>
        <servlet-class>com.ivanmix.controller.CountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountController</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userEdit</servlet-name>
        <servlet-class>com.ivanmix.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userEdit</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userDelete</servlet-name>
        <servlet-class>com.ivanmix.controller.UserDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userDelete</servlet-name>
        <url-pattern>/user-delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userUpdate</servlet-name>
        <servlet-class>com.ivanmix.controller.UserUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userUpdate</servlet-name>
        <url-pattern>/user-update</url-pattern>
    </servlet-mapping>

</web-app>