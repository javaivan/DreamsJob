<web-app>

    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>com.ivanmix.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CountController</servlet-name>
        <servlet-class>com.ivanmix.controller.CountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountController</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAllServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.UserAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAllServlet</servlet-name>
        <url-pattern>/user-all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.UserAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user-add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.ItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ivanmix.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>