<?xml version="1.0"?>
<hibernate-mapping>
    <class name="com.ivanmix.entity.Account" table="account">
        <id name="id">
            <generator class="identity" />
        </id>
        <property name="login" type="string">
            <column name="login" length="255" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="255" not-null="true" unique="true" />
        </property>
        <property name="role" column="role"/>
<!--        <bag name="applications" inverse="true">
            <key column="account" not-null="true"/>
            <one-to-many class="com.ivanmix.entity.Application"/>
        </bag>-->
    </class>
</hibernate-mapping>