<?xml version="1.0"?>
<hibernate-mapping>
    <class name="com.ivanmix.entity.User" table="users">
        <id name="id">
            <generator class="identity" />
        </id>
        <property name="login" type="string">
            <column name="login" length="255" not-null="true" unique="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="255" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="255" />
        </property>
        <property name="firstName" type="string">
            <column name="first_name" length="255" />
        </property>
        <property name="lastName" type="string">
            <column name="last_name" length="255" />
        </property>
        <property name="creared" column="created"/>
        <property name="type" type="string">
            <column name="type" length="10" />
        </property>
<!--
        <property name="parent" type="int" column="parent"/>
-->
       <!-- <many-to-one name="accountId" column="account" class="com.ivanmix.entity.Account"/>-->
    </class>
</hibernate-mapping>